# .env.local.example
# Copy this file to .env.local and fill in your actual values
# .env.local is automatically loaded by Next.js and ignored by git

# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY="AIzaSyC..."
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="draftkings-sms.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="draftkings-sms"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="draftkings-sms.appspot.com"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="123456789012"
NEXT_PUBLIC_FIREBASE_APP_ID="1:123456789012:web:abc123def456"

# Twilio SMS Configuration
TWILIO_ACCOUNT_SID="ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# Twilio Studio Flow SIDs (get these after creating flows in Twilio Console)
TWILIO_WELCOME_FLOW_SID="FWxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
TWILIO_REMINDER_FLOW_SID="FWxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
TWILIO_FEEDBACK_FLOW_SID="FWxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
TWILIO_GAMEDAY_FLOW_SID="FWxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# NextAuth.js (Optional for Phase 1)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key-here"

# Development Options
NODE_ENV="development"
USE_FIREBASE_EMULATOR=false

# Email Configuration (SMTP)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="\"All Pro Sports NC\" <noreply@allprosportsnc.com>"

# Optional: Stripe (for future phases)
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."

# Optional: OpenAI (for future AI features)
OPENAI_API_KEY="sk-..."
